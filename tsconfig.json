/* Base compiler config for the project, and for general purpose IDE error
 * highlighting.
 */
{
    "compilerOptions": {
        /* Basic Options */
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],

        /* Strict Type-Checking Options */
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "baseUrl": "./"
    }
}
